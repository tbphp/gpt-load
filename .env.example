# Server configuration
PORT=3001
HOST=0.0.0.0

# Timeout for server read, write, and idle connections (seconds)
SERVER_READ_TIMEOUT=60
SERVER_WRITE_TIMEOUT=600
SERVER_IDLE_TIMEOUT=120
SERVER_GRACEFUL_SHUTDOWN_TIMEOUT=10

# Slave node identifier
IS_SLAVE=false

# Timezone
TZ=Asia/Shanghai

# Authentication configuration is required to protect the admin API and UI interface
AUTH_KEY=sk-123456

# Database configuration - default is empty, uses SQLite at ./data/gpt-load.db
# MySQL example:
# DATABASE_DSN=root:123456@tcp(mysql:3306)/gpt-load?charset=utf8mb4&parseTime=True&loc=Local
# PostgreSQL example:
# DATABASE_DSN=postgres://postgres:123456@postgres:5432/gpt-load?sslmode=disable

# Redis configuration - default is empty, uses memory storage
# REDIS_DSN=redis://redis:6379/0

# Concurrency limit
MAX_CONCURRENT_REQUESTS=100

# CORS configuration
ENABLE_CORS=true
ALLOWED_ORIGINS=*
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*
ALLOW_CREDENTIALS=false

# Log configuration
LOG_LEVEL=info
LOG_FORMAT=text
LOG_ENABLE_FILE=true
LOG_FILE_PATH=./data/logs/app.log
